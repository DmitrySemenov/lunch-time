@{
    ViewBag.Title = "Уведомления от админа";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Section = "AdminNotification";
}

<div class="row content">
        <div class="col-lg-4 col-md-4 col-xs-1"></div>
        <div class="col-lg-4 col-md-4 col-xs-10">
            @using (Html.BeginForm("Index", "AdminNotification", FormMethod.Post, new { notificationName = "Daily"}))
            {
                <div class="form-group">
                    <button type="submit" class="btn btn-default" >
                        Отправить дневную нотификацию
                    </button>
                </div>
            }    
            @using (Html.BeginForm("Index", "AdminNotification", FormMethod.Post, new { notificationName = "Weekly"}))
            {
                <div class="form-group">
                    <button type="submit" class="btn btn-default" >
                        Отправить недельную нотификацию
                    </button>
                </div>
            }   
            @using (Html.BeginForm("Index", "AdminNotification", FormMethod.Post, new { notificationName = "Admin" }))
            {
                <div class="form-group">
                    <button type="submit" class="btn btn-default" >
                        Отправить сообщение от админа
                    </button>
                </div>
            }   
        </div>
</div>