@model Dinner.Models.LoginModel

@{
    ViewBag.Title = "Вход";
}

<div class="row content">
    <div class="col-md-12 col-lg-12 full-height">
        <div class="row header-title">
            <div class="col-md-12 col-lg-12 text-center">
                <h1>Вход</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-1"></div>
            <div class="col-lg-4 col-md-4 col-xs-10">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        @Html.AntiForgeryToken()
                        @Html.ValidationMessage("Exception")
                    </div>
                    <div class="form-group with-icon-over-input">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Почта" })
                        <i class="icon glyphicon glyphicon-user text-muted"></i>
                        <span class="text-danger">
                            @Html.ValidationMessageFor(m => m.UserName)
                        </span>
                    </div>
                    <div class="form-group with-icon-over-input">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль" })
                        <i class="icon glyphicon glyphicon-lock text-muted"></i>
                        <span class="text-danger">
                            @Html.ValidationMessageFor(m => m.Password)
                        </span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Войти" class="btn btn-success btn-block" />
                        <hr />
                        @Html.ActionLink("Регистрация", "Register", "Account")
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
