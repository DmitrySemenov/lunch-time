@model Dinner.Models.RegisterModel
@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row content">
    <div class="col-md-12 col-lg-12 full-height">
        <div class="row header-title">
            <div class="col-lg-12 text-center">
                <h1>Регистрация</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-1"></div>
            <div class="col-lg-4 col-md-4 col-xs-10">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        @Html.AntiForgeryToken()
                        @Html.ValidationMessage("Exception")
                    </div>
                    <div class="form-group with-icon-over-input">
                        @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control", placeholder = "Имя Фамилия (на русском)" })
                        <i class="icon glyphicon glyphicon-user text-muted"></i>
                        <span class="text-danger">
                            @Html.ValidationMessageFor(m => m.DisplayName)
                        </span>
                    </div>
                    <div class="form-group with-icon-over-input">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Рабочая почта" })
                        <i class="icon glyphicon glyphicon-user text-muted"></i>
                        <span class="text-danger">
                            @Html.ValidationMessageFor(m => m.UserName)
                        </span>
                    </div>
                    <div class="form-group with-icon-over-input">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль" })
                        <i class="icon glyphicon glyphicon-lock text-muted"></i>
                        <span class="text-danger">
                            @Html.ValidationMessageFor(m => m.Password)
                        </span>
                    </div>
                    <div class="form-group with-icon-over-input">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Подтверждение пароля" })
                        <i class="icon glyphicon glyphicon-lock text-muted"></i>
                        <span class="text-danger">
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Регистрация" class="btn btn-success btn-block" />
                    </div>
                }
            </div>
        </div>
    </div>   
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }